<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/bg"
    tools:context=".MapActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
       	android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="640"
            android:text="@string/activity_map_title"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="135"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="420"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="150"/>
        <ImageView
            android:id="@+id/iv_photo_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="420"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="150"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="105"/>
	<ImageView
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="140"
	    android:src="@drawable/confirm_shadow_top"/>
	<ImageView
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="140"
	    android:src="@drawable/confirm_shadow_bottom"/>
	<Button
	    android:id="@+id/btn_save"
	   	android:layout_width="match_parent"
	   	android:layout_height="0dp"
	   	android:layout_weight="200"
	   	android:background="#ffffff"
	   	android:gravity="center_vertical|center_horizontal"
	   	android:text="@string/activity_map_button_save"
	   	android:textSize="22sp"
	   	android:textColor="#40ddc2"/>
</LinearLayout>
