<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.nexters.vobble"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".activity.VobbleActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
       	android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="640"
            android:text="@string/activity_listen_vobble_title"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="420"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="140"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="440">
	        <ImageView
	            android:id="@+id/voice_photo"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_margin="20dp"
	            android:src="@drawable/record_camera_icon_o"/>
	        <com.nexters.vobble.view.HoloCircularProgressBar
	                android:id="@+id/hcpb_vobble_progress"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:gravity="center"
	                app:stroke_width="10dp"
	                app:progress="0"
	                app:marker_progress="1"
	                app:progress_color="#37D5B5"
	                app:progress_background_color="#FFFFFF"
	                app:marker_visible="false"
	                app:thumb_visible="false"/>
	    </FrameLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="140"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="105"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal" >

        	<TextView
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1" 
        	    android:textColor="#000000"
        	    android:text="nannanssol"
        	    android:gravity="right|center_vertical"
        	   	android:textStyle="bold"
        	    android:textSize="16sp"/>
        	<TextView
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:layout_marginLeft="10dp"
        	    android:text="made vobble"
        	    android:textColor="#000000"
        	    android:gravity="left|center_vertical"
        	    android:textSize="16sp" />
    	</LinearLayout>

    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="0dp"
    	    android:layout_weight="1"
    	    android:orientation="horizontal" >
        	<TextView
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="2" 
        	    android:text="on"
        	    android:textColor="#000000"
        	    android:gravity="center_vertical|right"
        	    android:textSize="16sp"/>
        	<TextView
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="4"
        	    android:layout_marginLeft="10dp"
        	    android:textStyle="bold"
        	    android:text="January 20, 2014"
        	    android:textColor="#000000"
        	    android:gravity="left|center_vertical"
        	    android:textSize="16sp"/>
    	</LinearLayout>
            
	    </LinearLayout>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <com.nhn.android.maps.NMapView
        android:id="@+id/vobble_map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="280"/>
</LinearLayout>
