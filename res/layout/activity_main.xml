<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vobble_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:orientation="horizontal"
        android:weightSum="3">

        <FrameLayout
            android:id="@+id/fl_all_voice_tab_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_mask">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/activity_main_all_vobbles_tab"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_my_voice_tab_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_mask">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/activity_main_my_vobbles_tab"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </FrameLayout>
        <FrameLayout
                android:id="@+id/fl_friends_voice_tab_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_mask">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/activity_main_friends_vobbles_tab"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>
 	
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1056">
 		<android.support.v4.view.ViewPager
        	android:id="@+id/viewPager"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
 		<LinearLayout 
 		    android:layout_width="match_parent"
 		    android:layout_height="match_parent"
 		    android:orientation="horizontal">
 		    <View
 		        android:layout_width="0dp"
 		        android:layout_height="match_parent"
 		        android:layout_weight="1" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:id="@+id/iv_reload_btn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:src="@drawable/reload_icn" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:text="Reload"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_vobble_cnt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:gravity="bottom|center_horizontal"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
		            <View
		                android:layout_width="match_parent"
		                android:layout_height="0dp"
		                android:layout_weight="1"/>
		            <TextView
		                android:id="@+id/tv_vobble_cnt_type"
		                android:layout_width="match_parent"
		                android:layout_height="0dp"
		                android:layout_weight="4"
		                android:text="All vobbles"
		                android:textColor="@color/white"
		                android:gravity="center_horizontal|center_vertical"
		                android:textSize="16sp" />
		            <View
		                android:layout_width="match_parent"
		                android:layout_height="0dp"
		                android:layout_weight="2" />
                </LinearLayout>
			</LinearLayout>
 		    <LinearLayout
 		        android:layout_width="0dp"
 		        android:layout_height="match_parent"
 		        android:layout_weight="2"
 		        android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_event_btn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:src="@drawable/event_icn" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:text="Events"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                </LinearLayout>
 		    </LinearLayout>
 		    <View
 		        android:layout_width="0dp"
 		        android:layout_height="match_parent"
 		        android:layout_weight="1" />
 		</LinearLayout>
    </FrameLayout>

</LinearLayout>

